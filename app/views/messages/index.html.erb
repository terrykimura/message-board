<div class="panel panel-default">
  <div class="panel-heading">
    Messages
  </div>
  
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(Message.new) do |f| %>
  Name:
  <%= f.text_field :name %>

  Message:
  <%= f.text_field :body %>
  <%= f.submit %>
<% end %>